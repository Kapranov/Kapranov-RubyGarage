<!DOCTYPE html>
<html>
<head>
  <title>KapranovRubygarage</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="text-align:center; padding:1em">
  <% if current_user %>
    <div class="btn-group">
      <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:15px"></i></a>
      <%= link_to "Signed in as #{current_user.name}", signout_path, id: "sign_out", class:'btn btn-primary', style: 'width:15em' %>
    </div>
   <% else %>
     <div class="btn-group">
      <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:16px"></i></a>
      <%= link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: 'btn btn-primary', style: 'width:15em' %>
     </div>
     <br>
     <%= image_tag("RubyGarage.jpg", size: "250") %>
     <br>
     <div class="hero-unit">
      <h1> Test App Todos </h1>
      <h6> Oleg G.Kapranov </h6>
     </div>
  <% end %>

  <div class="container" style="padding-top:20px;">
    <%= yield %>
  </div>

  <div id="footerdown">
    <h6>&#169; Kapranov for RubyGarage</h6>
  </div>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
